<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Window decor -->

        <!-- Dialogs -->
        <item name="materialAlertDialogTheme">@style/AlertDialog.Theme</item>

        <!-- Buttons -->
        <item name="materialButtonStyle">@style/AppButtonStyle</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="toolbarStyle">@style/AppThemeToolbar</item>
        <item name="appBarLayoutStyle">@style/AppThemeToolbar</item>

        <item name="android:textViewStyle">@style/AppTheme.TextView</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/background</item>
    </style>

    <style name="AppTheme.TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/livesport_regular</item>
    </style>

    <style name="AppTheme.TextAppearance.HeadLine" parent="TextAppearance.AppCompat.Headline">
        <item name="fontFamily">@font/livesport_medium</item>
        <item name="android:textSize">21sp</item>
    </style>


    <style name="AppThemeToolbar.TextAppearance"  parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/livesport_bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="AppThemeToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="backgroundTint">@color/yellow_50</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/deep_sky_blue</item>
        <item name="colorPrimaryDark">@color/warm_blue</item>
        <item name="colorSecondary">?attr/colorPrimary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnSurface">@color/light_black_20</item>
    </style>


    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:textColor">@color/background</item>
    </style>


    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!-- Non-top-level screens should inflate with this theme to replace the keyline. -->
    <style name="AppTheme.Detail">

    </style>


    <style name="AlertDialog.Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/AlertDialog.Style</item>

    </style>

    <style name="AlertDialog.Style" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/AlertDialog.ShapeAppearance</item>
    </style>

    <style name="AlertDialog.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Alert Dialog -->
    <style name="progressDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">?attr/colorOnSurface</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="centeredBlockingDialogContainer">
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppThemeProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:maxWidth">32dp</item>
        <item name="android:maxHeight">32dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="colorAccent">?attr/colorOnSurface</item>
        <item name="android:progressTint">#f47a65</item>
        <item name="android:indeterminateTint">?attr/colorOnSurface</item>
    </style>


</resources>
